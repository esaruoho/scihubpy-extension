{
  "manifest_version": 3,
  "name": "Sci-Hub PDF Downloader",
  "version": "1.0.0",
  "description": "Detects DOIs on journal pages and downloads PDFs directly from Sci-Hub",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://sci-hub.vg/*",
    "https://sci-hub.al/*",
    "https://sci-hub.mk/*",
    "https://sci-hub.ru/*",
    "https://sci.bban.top/*",
    "https://*.sci-hub.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
